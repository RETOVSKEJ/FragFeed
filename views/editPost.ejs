<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/postForm.css">
    <script src="https://kit.fontawesome.com/c780166e7c.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="sidebar">
        <a href="/">Strona Główna</a>
    </div>
    <%= msg %>
    <form action="/<%=post.id%>/edit?_method=PATCH" method="POST" enctype="multipart/form-data">
        <textarea id="title" name="title"  rows="1" required><%= post.title %></textarea>
        <textarea id="body" name='body'  rows="20" required><%= post.body %></textarea>
        <label for="image">Upload Image</label>
        <!-- MIEJSCE NA TAGI -->
        <input type="file" name="image" onchange="document.getElementById('img-preview').src = window.URL.createObjectURL(this.files[0]);
        console.log(document.getElementById('img-preview').src)">  
        <img id="img-preview" alt="your image" height="200px" width="200px"/> 
        <button type="submit" formaction="/preview" formmethod="POST" formenctype="application/x-www-form-urlencoded">Podgląd</button>
        <button type="submit" >Edytuj Post</button>
    </form>
    <%- include('./partials/logoutButton') %>
    <footer>Zieleniec development team</footer>
</body>
</html>