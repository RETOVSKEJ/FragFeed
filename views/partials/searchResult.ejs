<div class="search-result">
    <a href="/<%= post.id %>">
        <img src="<%= post.image %>" alt="image">
        <div class='flex-c fs-small text'>
            <strong><%= post.title %></strong>
            <em><%= date.toLocaleString('pl', {
                month: 'long',
                day: 'numeric',
                year: 'numeric',
                hour: 'numeric',
                minute: 'numeric',
                hour12: false,
            }) %></em>
        </div>
    </a>
</div>